@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NgoPhucThinhMystore.Models.ViewModel.Cart

<h2>Thanh toán</h2>

@if (Model == null || Model.Items == null || !Model.Items.Any())
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <p>Tổng tiền: <strong style="color:red">@Model.TotalValue().ToString("N0")</strong></p>

    <table class="table">
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice.ToString("N0")</td>
            </tr>
        }
    </table>

    <button class="btn btn-success">Xác nhận thanh toán (demo)</button>
}

