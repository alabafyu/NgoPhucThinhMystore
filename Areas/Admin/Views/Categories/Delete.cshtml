@model NgoPhucThinhMystore.Models.Category


@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Adminlayout.cshtml";
}

<h2 class="bg-success">Xóa Danh mục</h2>




<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <h4 bg-danger>Bạn thật sự muốn xóa à ?</h4>

        <div class="form-group">
            <div class="control label col-md-2">Tên danh Mục</div>
            <div class="col-md-10"></div>
            @Html.DisplayFor(model => model.CategoryName)
        </div>


        <div class="form-group">
            <hr />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="xóa" class="btn btn-primary" />

                @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-primary " })
            </div>
        </div>

    </div>


}


